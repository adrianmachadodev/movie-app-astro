---
import { MOVIES } from "../consts/movies"
import MovieRecommend from "./MovieRecommend.astro";

const genre = ["Acción", "Familiar", "Ciencia ficción"]

const recommendMovies = MOVIES.filter((movie:any) => movie.genre.includes("Aventura"));
console.log('recommend movies', recommendMovies);
---
<div class="flex flex-row w-full min-h-90 flex-wrap bg-blue-500 items-center justify-center gap-3">
    <h3 class="w-full text-center">Aventure Movies</h3>
    {
        recommendMovies.map((recommend:any) => (
            <div class="w-60 h-50 bg-fuchsia-500 rounded">
                <div class="w-full h-10 bg-amber-300 font-bold text-sm text-center">
                    {recommend.title}
                </div>
            </div>
        ))
    }
</div>